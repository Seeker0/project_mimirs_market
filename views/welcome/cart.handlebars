<header style="margin-top: 80px;">

</header>

{{#if products.length }}
  <div class="row" id="cart">
    <button class="btn btn-primary" name="updateAll" onclick="updateAll()">Update All</button>
    <form class="hidden" name="all" action="/cart/updateAll" method="post">
      <input type="text" id="allItems" name="all">
      <button type="submit" id="submitAll" class="btn hidden"></button>
    </form>
    {{#each products as |product| }}
      <div class="col-xs-9">
        <img src="{{ product.image }}" />
        <a href="/products/{{ product.id }}"><h3>{{ product.name }}</h3></a>
        <h5>${{ product.price }}.00</h5>
        <br>
        <form class="cartItems" name="quantity" action="/cart/update/{{ product.id }}" method="get">
          <p class="hidden id">{{ product.id }}</p>
          <label for="quantity">Quantity</label>
          <input type="number" id="quantity" name="quantity" value="{{ product.quantity }}" />
          <button type="submit" class="btn btn-success">Update Quantity</a>
        </form>
      </div>
      <a href="/cart/remove/{{ product.id }}" class="btn btn-danger">Remove</a>
    {{/each }}
  </div>
  <div class="row" id="checkout">
    <h3>Total: ${{ session.total }}.00</h3>
    <a href="/cart/clear" class="btn btn-danger">Clear Cart</a>
    <a href="/checkout" class="btn btn-primary">Checkout</a>
  </div>
{{else }}
  <p class="text-danger">No Products</p>
{{/if }}
